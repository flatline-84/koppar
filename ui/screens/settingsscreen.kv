#:kivy 1.10.0

<SettingsScreen>:
    name: '_settings_screen_'
    #:set screen_colour 0.2,0.2,0.25,1
    
    canvas.before:
        Color:
            rgba: screen_colour
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                padding: 40
                spacing: 20
                Button:
                    on_press: root.restart(self)
                    Label:
                        id: shutdown_label
                    Image:
                        allow_stretch: False
                        keep_ratio: True
                        source: 'res/images/restart-100.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

                Button:
                    on_press: root.shutdown(self)
                    Image:
                        allow_stretch: False
                        keep_ratio: True
                        source: 'res/images/shutdown-100.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                Button:
                    on_press: root.update_koppar(self)
                    Image:
                        allow_stretch: False
                        keep_ratio: True
                        source: 'res/images/synchronize-100.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
            Label:
                id: output_window
                #text_size: root.width, None
                size: self.texture_size
                text: "Kivy version: \t1.11.1\nKoppar build: \tv0.1"
        NavBar: