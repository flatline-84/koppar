#:kivy 1.10.0

<HomeScreen>:
    name: '_home_screen_'
    canvas.before:
        Color:
            # rgba: 0.5,0.75,1,1
            rgba: 0.422,0.176,0.336,1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        FloatLayout:
            Label:
                id: home_screen_label_time
                size: self.texture_size
                font_size: '80sp'
                font_name: "MainFont"
                pos_hint: {'x':-0.30, 'y':0.4}
            Label:
                id: home_screen_label_date
                size: self.texture_size
                font_size: '30sp'
                pos_hint: {'x':-0.3, 'y':0.2}
        NavBar:
