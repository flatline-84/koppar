#:kivy 1.10.0
<NavBar@BoxLayout>:
    orientation: 'vertical'
    # size: 0.2, 1
    size_hint_x: 0.1
    # spacing: 20
    # pos: 200,200
    # size: 200,200
    # allow_stretch: False
    # keep_ratio: True
    canvas.before:
        Color:
            rgba: 0.9,0.9,0.9,0.4
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        # text: 'Home'
        background_color: 0,0,0,0
        on_press: 
            app.root.current = '_home_screen_'
        Image:
            allow_stretch: False
            keep_ratio: True
            source: 'res/images/home-100.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: 80,80
    Button:
        # text: 'News'
        background_color: 0,0,0,0
        on_press: 
            app.root.current = '_news_screen_'
        Image:
            allow_stretch: False
            keep_ratio: True
            source: 'res/images/news-100.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: 80,80
    Button:
        # text: 'Spotify'
        background_color: 0,0,0,0
        # background_down: 1,1,1,1
        # background_down: ''
        # background_normal: ''
        on_press: 
            app.root.current = '_spotify_screen_'
        Image:
            allow_stretch: False
            keep_ratio: True
            source: 'res/images/music-100.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: 80,80
    Button:
        # text: 'Deals'
        background_color: 0,0,0,0
        on_press: 
            app.root.current = '_deals_screen_'
        Image:
            allow_stretch: False
            keep_ratio: True
            source: 'res/images/tinder-100.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: 80,80
    Button:
        # text: 'Settings'
        background_color: 0,0,0,0
        on_press: 
            app.root.current = '_settings_screen_'
        Image:
            allow_stretch: False
            keep_ratio: True
            source: 'res/images/settings-100.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: 80,80